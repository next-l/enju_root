.row
  .col-md-3
    .panel.panel-default
      .panel-body
        ul
          li
            = link_to 'Edit', enju_root.edit_work_path(@work)
          li
            = link_to 'New child', enju_root.works_path(parent_id: @work.id)
          li
            = link_to 'New expression', enju_root.new_expression_path(work_id: @work.id)
