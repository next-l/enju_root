<h1>Listing Content Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Display name</th>
      <th>Note</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_types.each do |content_type| %>
      <tr>
        <td><%= content_type.name %></td>
        <td><%= content_type.display_name %></td>
        <td><%= content_type.note %></td>
        <td><%= content_type.position %></td>
        <td><%= link_to 'Show', content_type %></td>
        <td><%= link_to 'Edit', edit_content_type_path(content_type) %></td>
        <td><%= link_to 'Destroy', content_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

